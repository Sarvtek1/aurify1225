{
  "firestore": {
    "rules": "data/firestore/rules/firestore.rules",
    "indexes": "data/firestore/indexes/firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],

    "headers": [
      /* A — High TTL for immutable, fingerprinted assets (put hashed files here when possible) */
      {
        "source": "**/*.@(js|css|mjs|cjs|map)",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      },
      {
        "source": "**/*.@(png|jpg|jpeg|gif|webp|svg|ico|avif|mp4|mp3|woff|woff2|ttf|eot|otf)",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      },

      /* B — Extra safety: do NOT cache HTML or SW at the CDN */
      {
        "source": "**/*.html",
        "headers": [
          { "key": "Cache-Control", "value": "no-store" }
        ]
      },
      {
        "source": "service-worker.js",
        "headers": [
          { "key": "Cache-Control", "value": "no-store" }
        ]
      }
    ],

    /* C — Catch-all rewrite ONLY for routes that are NOT real files in /public */
    "rewrites": [
      {
        "source": "**",
        "run": { "serviceId": "aurify-ssr", "region": "me-central1" }
      }
    ]
  }
}
